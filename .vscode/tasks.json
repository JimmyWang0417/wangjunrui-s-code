{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++-10",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-pedantic",
                "-Wformat=2",
                "-Wfloat-equal",
                "-Wlogical-op",
                "-Wcast-qual",
                "-Wcast-align",
                "-Wconversion",
                "-std=c++20",
                "-O2",
                "-pthread",
                "-DPAPERDOG"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}